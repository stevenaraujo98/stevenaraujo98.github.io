---
const {
  title,
  img,
  desc,
  date,
  pub,
  puber,
  url,
  badge,
  tags,
  target = "_blank",
} = Astro.props;
import { localizePath } from "astro-i18next";
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={target === "_blank" ? url : localizePath(url)} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <img
            src={img}
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        {
          pub ? (
            <div class="">
              <p class="py-1 text-1xl">Date of Conference: {date}</p>
              <p class="py-1 text-1xl">Publisher: {puber}</p>
              <p class="py-1 text-1xl">Published In: {pub}</p>
            </div>
          ) : (
            <p class="py-1 text-1xl">Publisher: {desc}</p>
          )
        }
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => <div class="badge badge-outline">{tag}</div>)
          }
        </div>
      </div>
    </div>
  </a>
</div>
